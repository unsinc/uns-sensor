#COPY /Docker/IDS/suricata/eth1/eth5.yaml /etc/suricata/eth1/eth5.yaml
#COPY /Docker/IDS/suricata/classification.config /etc/suricata/eth1/classification.config 
#COPY /Docker/IDS/suricata/reference.config /etc/suricata/eth1/reference.config 
#COPY /Docker/IDS/suricata/classification.config /etc/suricata/eth2/classification.config 
